<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:tv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rrmain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dip"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_marginTop="120dip">


        <reco.frame.tv.view.TvButton
            android:id="@+id/btn_huiyi"
            android:layout_width="@dimen/px462"
            android:layout_height="@dimen/px850"
            android:background="@drawable/wl"
            tv:cursorRes="@drawable/border"
            tv:scale="1" />


        <reco.frame.tv.view.TvButton
            android:id="@+id/btn_dianbo"
            android:layout_width="@dimen/px462"
            android:layout_height="@dimen/px394"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btn_huiyi"
            android:background="@drawable/dianbo"
            tv:cursorRes="@drawable/border"
            tv:scale="1" />

        <reco.frame.tv.view.TvButton
            android:id="@+id/btn_bm"
            android:layout_width="@dimen/px462"
            android:layout_height="@dimen/px394"
            android:layout_below="@+id/btn_dianbo"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/btn_huiyi"
            android:background="@drawable/bm"
            tv:cursorRes="@drawable/border"
            tv:scale="1" />

        <reco.frame.tv.view.TvButton
            android:id="@+id/btn_xuexi"
            android:layout_width="@dimen/px392"
            android:layout_height="@dimen/px280"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btn_dianbo"
            android:background="@drawable/xuexi"
            tv:cursorRes="@drawable/border"
            tv:scale="1" />

        <reco.frame.tv.view.TvButton
            android:id="@+id/btn_jiceng"
            android:layout_width="@dimen/px393"
            android:layout_height="@dimen/px280"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/btn_xuexi"
            android:background="@drawable/jiceng"
            tv:cursorRes="@drawable/border"
            tv:scale="1" />


        <reco.frame.tv.view.TvButton
            android:id="@+id/btn_cunwu"
            android:layout_width="@dimen/px392"
            android:layout_height="@dimen/px394"
            android:layout_alignBottom="@+id/btn_bm"
            android:layout_below="@+id/btn_xuexi"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/btn_bm"
            android:background="@drawable/cunwu"
            tv:cursorRes="@drawable/border"
            tv:scale="1" />

        <reco.frame.tv.view.TvButton
            android:id="@+id/btn_set"
            android:layout_width="@dimen/px393"
            android:layout_height="@dimen/px394"
            android:layout_alignBottom="@+id/btn_bm"
            android:layout_below="@+id/btn_jiceng"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/btn_cunwu"
            android:background="@drawable/xt"
            tv:cursorRes="@drawable/border"
            tv:scale="1" />


    </RelativeLayout>

    <TextView
        android:id="@+id/txtdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:text="2017年1月1日 星期日 12:00"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/txthuanying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtdate"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dip"
        android:text="@string/huanying"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:background="@color/blank"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <reco.frame.demo.entity.AlwaysMarqueeTextView
            android:id="@+id/txtshow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:ellipsize="marquee"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:lines="1"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>
</RelativeLayout>